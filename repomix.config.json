{
  "output": {
    "style": "xml",
    "filePath": "YCG_context_map.xml",
    "parsableStyle": false,
    "compress": false,
    "headerText": "YCG - YAML Code Graph",
    "fileSummary": true,
    "removeComments": true,
    "removeEmptyLines": true,
    "topCharsLimit": 10000000,
    "topFilesLength": 5,
    "showLineNumbers": false,
    "includeEmptyDirectories": false,
    "directoryStructure": true,
    "files": true,
    "truncateBase64": true,
    "tokenCountTree": 8000,
    "git": {
      "sortByChanges": false,
      "sortByChangesMaxCommits": 100,
      "includeDiffs": false,
      "includeLogs": false,
      "includeLogsCount": 50
    }
  },
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "**/target/**",
      "**/.vscode/**",
      "**/.kiro/**",
      "**/*.yaml/**",
      "**/*.md/**",
      "**/benches/**",
      ".git/**",
      "YCG_context_map.xml"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "include": [
    "**/*"
  ]
}