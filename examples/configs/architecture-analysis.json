{
    "output": {
        "format": "yaml",
        "compact": true,
        "ignoreFrameworkNoise": true
    },
    "ignore": {
        "useGitignore": true,
        "customPatterns": [
            "**/node_modules/**",
            "**/.git/**",
            "**/target/**",
            "**/dist/**",
            "**/build/**",
            "**/*.test.*",
            "**/*.spec.*",
            "**/__tests__/**",
            "**/__mocks__/**",
            "**/migrations/**",
            "**/seeds/**"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.rs"
    ]
}